{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "shows",
  "info": {
    "name": "Shows"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "Title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "Description": {
      "type": "richtext",
      "required": true
    },
    "Showcover": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "slug": {
      "type": "string",
      "unique": true,
      "required": true
    }
  }
}
